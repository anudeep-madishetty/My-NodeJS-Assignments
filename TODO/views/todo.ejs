<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <header>Todo App</header>
    <br />
    <form action="/todo/add" method="POST">
      <input class="form-control" type="text" name="todoname" />
      <button class="btn btn-primary">Submit</button>
    </form>
    <%data.forEach(todo=>{ %>
    <div class="todo">
      <% if(todo.taskstatus) {%>
      <p class="complete"><%= todo.todoname %></p>
      <%} else {%>
      <p><%= todo.todoname %></p>
      <form action="/update/<%=todo._id%>/todo" method="POST">
        <button class="btn btn-success btn-sm">Mark Complete</button>
      </form>
      <%}%>

      <!-- <form action="/delete/<%=todo._id%>/todo" method="POST">
        <button class="btn btn-danger btn-sm">Delete</button>
      </form> -->

      <!-- browser don't have put and delete methods so we need to use npm moethod-overrid -->

      <form action="/delete/<%=todo._id%>/todo?_method=DELETE" method="POST">
        <button class="btn btn-danger btn-sm">Delete</button>
      </form>
    </div>
    <%}) %>
  </body>
</html>
